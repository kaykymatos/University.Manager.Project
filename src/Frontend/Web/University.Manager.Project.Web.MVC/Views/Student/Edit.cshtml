@model University.Manager.Project.Web.MVC.Models.StudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4>Student</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" hidden  />

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegisterCode" class="control-label">Register Code</label>
                    <input asp-for="RegisterCode" class="form-control" />
                    <span asp-validation-for="RegisterCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="form-label">Course</label>
                    <select class="form-select" asp-for="CourseId" asp-items="@ViewBag.CourseId">
                        <option value="0">Select</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
